@model ProjetoParaProjetos.Models.Tarefa

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Tarefa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TarefaId" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
               <textarea asp-for="Descricao" class="form-control"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Prioridade" class="control-label"></label>
                <select name="Prioridade" id="Prioridade" class="form-control">
                    @foreach (var item in ViewData["Prioridades"] as List<string>)
                    {
                        <option value="@item">@item</option>
                    }
                     </select>
                <span asp-validation-for="Prioridade" class="text-danger"></span>
            </div>
               <div class="form-group">
                <label asp-for="Categoria" class="control-label"></label>
                <select name="Categoria" id="Categoria" class="form-control">
                    @foreach (var item in ViewData["Categorias"] as List<string>)
                    {
                        <option value="@item">@item</option>
                    }
                     </select>
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>

            <input type="hidden" value="@Model.DataCriacao" />
            <input type="hidden" value="@Model.DataFinal" />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

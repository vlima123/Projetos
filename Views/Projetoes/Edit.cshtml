@model ProjetoParaProjetos.Models.Projeto

@{
    ViewData["Title"] = "Edit";
    var _objetivo = ViewData["Objetivos"];
    var objetivos = _objetivo as IEnumerable<ProjetoParaProjetos.Models.Objetivos>;
}

<h1>Edit</h1>

<h4>Projeto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProjetoId" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea asp-for="Descricao" class="form-control"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="Ativo">Ativo</option>
                    <option value="Pausado">Pausado</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="ObjetivoId" class="control-label">Objetivo</label>
                <select name="ObjetivoId" id="ObjetivoId" class="form-control">
                    <option value="">Selecione um objetivo</option>
                    @foreach (var objetivo in objetivos as List<Objetivos>)
                    {
                        <option name="ObjetivoId" value="@objetivo.ObjetivosId" id="ObjetivoId">@objetivo.Objetivo</option>
                        <input type="hidden" name="ObjetivoId" value="@objetivo.ObjetivosId" id="ObjetivoId" />

                    }
                </select>
            </div>
            <div class="form-group">
                <label for="Categoria" class="control-label">Objetivo</label>
                <select name="Categoria" id="Categoria" class="form-control">
                    <option value="">Selecione um objetivo</option>

                        <option name="Categoria" value="Front-End">Front-End</option>
                        <option name="Categoria" value="Back-End">Back-End</option>
                        <option name="Categoria" value="Data-Science">Data-Science</option>
                        <option name="Categoria" value="FullStack">FullStack</option>
                       

                    
                </select>
            </div>

            <input type="hidden" name="DataInicio" value="@Model.DataInicio">


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

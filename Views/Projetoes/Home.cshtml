@model List<Projeto>

@{
   //pegar o projeto com a data mais recente
    var projetoRecente = Model.OrderByDescending(x => x.DataInicio).FirstOrDefault();
    //pegar a quantidade de projetos ativos
    var projetosAtivos = Model.Where(x => x.Status == "Ativo").Count();
    //pegar a quantidade de projetos finalizados
    var projetosFinalizados = Model.Where(x => x.Status == "Finalizado").Count();
    //pegar a quantidade de projetos em pausa
    var projetosPausa = Model.Where(x => x.Status == "Pausado").Count();

}

<body>
    <div class="container d-flex flex-column" style="height: 100vh;width: auto; max-width:60vw">
        <h1 class="text-center">Projetos</h1>
        <div class="row d-flex justify-content-center align-items-center" style="width: auto;">
            <div class="col-md-12 d-flex justify-content-center justify-content-lg-center align-items-lg-center"
                style="height: auto;width: auto;">
                <div class="d-flex justify-content-center align-items-center flex-wrap justify-content-lg-center"
                    style="width: 100%;height: 50%;margin: 1rem;">
                    
                    <a class="btn btn-primary" type="button"
                        style="margin: 1rem;padding: 1rem;width: 200px;border-radius: 20px;" asp-controller="Projetoes" asp-action="Create">Criar
                        Projeto
                        </a>
                    <a class="btn btn-primary" type="button"
                        style="margin: 1rem;padding: 1rem;width: 200px;border-radius: 20px;" asp-controller="Projetoes" asp-action="Index">Listar
                        Projetos</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 d-flex flex-column justify-content-evenly align-items-center" style="height: auto;">
                <div class="text-center d-flex justify-content-center flex-wrap">
                    <div class="card" style="max-width: 400px;margin: .5rem;">
                        <div class="card-body">
                            <h4 class="card-title">Status dos Projetos</h4>
                            <h6 class="text-muted card-subtitle mb-2">Visao Geral</h6>
                            <ul class="list-unstyled">
                                <li>Contagem de Projetos ativos <strong>@projetosAtivos </strong></li>
                                <li>Contagem de Projetos Finalizados <strong>@projetosFinalizados</strong></li>
                                <li>Projetos em Pausa <strong>@projetosPausa</strong></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="alert alert-warning text-center mb-1" role="alert">
                    <strong>Atenção!</strong> É importante não sobrecarregar-se com muitos projetos em andamento ao
                    mesmo tempo. Tente priorizar seus projetos e limitar sua lista de tarefas para garantir que possa
                    dedicar a atenção e o tempo necessários a cada projeto individualmente.
                </div>
            </div>
        </div>
    </div>
</body>